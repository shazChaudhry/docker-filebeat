[Unit]
Description=Jenkins Service
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop jenkins
ExecStartPre=-/usr/bin/docker rm jenkins
ExecStartPre=/usr/bin/docker pull jenkinsci/jenkins
ExecStart=/usr/bin/docker run --rm --name jenkins --publish 8080:8080 jenkinsci/jenkins

[Install]
WantedBy=multi-user.target
