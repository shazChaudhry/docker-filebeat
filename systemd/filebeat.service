[Unit]
Description=Filebeat Service
After=docker.service
Requires=docker.service
After=jenkins.service
Requires=jenkins.service

[Service]
TimeoutStartSec=0
Restart=always
ExecStartPre=-/usr/bin/docker stop filebeat
ExecStartPre=-/usr/bin/docker rm filebeat
#ExecStartPre=/usr/bin/docker pull filebeat
TimeoutStartSec=20
ExecStart=/usr/bin/docker run --rm --name filebeat --volume filebeat_data:/data --volumes-from jenkins:ro filebeat

[Install]
WantedBy=multi-user.target
